# CRITICAL: Force correct MIME types for JS/CSS (prevents application/octet-stream)
<FilesMatch "\.(js|mjs)$">
  ForceType application/javascript
  Header always set Content-Type "application/javascript"
  Header always unset X-Content-Type-Options
  Header always set X-Content-Type-Options nosniff
</FilesMatch>

<FilesMatch "\.css$">
  ForceType text/css
  Header always set Content-Type "text/css"
  Header always unset X-Content-Type-Options
  Header always set X-Content-Type-Options nosniff
</FilesMatch>

# CRITICAL: Block ALL source files (prevents MIME errors even if accidentally referenced)
<FilesMatch "\.(ts|tsx)$">
  Require all denied
  Header always set Content-Type "text/plain"
</FilesMatch>

# Block src directory access completely
RewriteEngine On
RewriteRule ^src/ - [F,L]

# Block any TypeScript files that might slip through
RewriteRule \.(ts|tsx)$ - [F,L]

# CRITICAL: Cache Control (prevents stale MIME-typed assets)
<FilesMatch "\.(html)$">
  Header always set Cache-Control "no-store, must-revalidate"
  Header always set Pragma "no-cache"
  Header always set Expires "0"
</FilesMatch>

<FilesMatch "\.(js|mjs|css|png|jpg|jpeg|gif|svg|ico|woff|woff2)$">
  Header always set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Ensure assets directory gets aggressive caching
<Directory "*/assets">
  Header always set Cache-Control "public, max-age=31536000, immutable"
</Directory>

# API Rewrite Rules (continue RewriteEngine from above)

# Enable proxy module  
<IfModule mod_proxy.c>
    ProxyPreserveHost On
    ProxyRequests Off
    
    # Handle preflight OPTIONS request for contact
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [P,L]
    
    # Handle POST request for contact
    RewriteCond %{REQUEST_METHOD} POST
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [P,L]
</IfModule>

# Fallback if mod_proxy not available - use redirect
<IfModule !mod_proxy.c>
    # Handle preflight OPTIONS request
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [R=307,L]
    
    # Handle POST request
    RewriteCond %{REQUEST_METHOD} POST  
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [R=307,L]
</IfModule>

# SPA Fallback - Exclude API routes completely
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/assets/
RewriteRule . /index.html [L]

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-XSS-Protection "1; mode=block"
Header always set Content-Security-Policy "frame-ancestors 'self' https://lovable.dev https://*.lovable.app;"