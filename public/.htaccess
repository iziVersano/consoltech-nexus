# Force correct MIME types for JS/CSS
<FilesMatch "\.(js|mjs)$">
  ForceType application/javascript
  Header set Content-Type "application/javascript"
</FilesMatch>

<FilesMatch "\.css$">
  ForceType text/css
  Header set Content-Type "text/css"
</FilesMatch>

# Block source files outright
<FilesMatch "\.(ts|tsx)$">
  Require all denied
</FilesMatch>

# Block src directory access
RewriteEngine On
RewriteRule ^src/ - [F,L]

# Cache Control
<FilesMatch "\.(html)$">
  Header set Cache-Control "no-store, must-revalidate"
</FilesMatch>

<FilesMatch "\.(js|mjs|css|png|jpg|jpeg|gif|svg|ico|woff|woff2)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# API Rewrite Rules (continue RewriteEngine from above)

# Enable proxy module  
<IfModule mod_proxy.c>
    ProxyPreserveHost On
    ProxyRequests Off
    
    # Handle preflight OPTIONS request for contact
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [P,L]
    
    # Handle POST request for contact
    RewriteCond %{REQUEST_METHOD} POST
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [P,L]
</IfModule>

# Fallback if mod_proxy not available - use redirect
<IfModule !mod_proxy.c>
    # Handle preflight OPTIONS request
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [R=307,L]
    
    # Handle POST request
    RewriteCond %{REQUEST_METHOD} POST  
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [R=307,L]
</IfModule>

# SPA Fallback
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule . /index.html [L]

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"