# MIME Types for JavaScript and CSS
AddType application/javascript .js .mjs
AddType text/css .css

# Cache Control
<FilesMatch "\.(html)$">
  Header set Cache-Control "no-store, must-revalidate"
</FilesMatch>

<FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# API Rewrite Rules
RewriteEngine On

# Enable proxy module
<IfModule mod_proxy.c>
    ProxyPreserveHost On
    ProxyRequests Off
    
    # Handle preflight OPTIONS request
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [P,L]
    
    # Handle POST request
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [P,L]
</IfModule>

# Fallback if mod_proxy not available - use redirect
<IfModule !mod_proxy.c>
    RewriteRule ^api/contact$ https://jqnbbwzbzgspwwlnackt.functions.supabase.co/contact [R=307,L]
</IfModule>

# SPA Fallback
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule . /index.html [L]

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"